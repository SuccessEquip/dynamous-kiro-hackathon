{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CORE Framework Session Schema",
  "description": "Schema for user sessions and project data in CORE Framework",
  "type": "object",
  "properties": {
    "session": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string", 
          "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}$",
          "description": "UUID v4 for session identification"
        },
        "name": { 
          "type": "string", 
          "minLength": 1, 
          "maxLength": 100,
          "description": "User-defined session name"
        },
        "description": { 
          "type": "string", 
          "maxLength": 500,
          "description": "Optional session description"
        },
        "created_at": { 
          "type": "string", 
          "format": "date-time",
          "description": "ISO 8601 timestamp of session creation"
        },
        "updated_at": { 
          "type": "string", 
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update"
        },
        "version": { 
          "type": "string", 
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "CORE Framework version used"
        },
        "implementation": {
          "type": "string",
          "enum": ["v1-html", "v2-python", "v3-react"],
          "description": "Implementation version that created this session"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "in_progress", "completed", "archived"],
          "default": "draft"
        }
      },
      "required": ["id", "name", "created_at", "updated_at", "version", "implementation"]
    },
    "project": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "minLength": 1, "maxLength": 200 },
        "summary": { "type": "string", "maxLength": 1000 }
      }
    },
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "question_id": { 
            "type": "string", 
            "pattern": "^[A-Z]-\\d{2}$",
            "description": "Reference to question ID in methodology schema"
          },
          "response": { 
            "type": "string",
            "description": "User's answer to the question"
          },
          "answered_at": { 
            "type": "string", 
            "format": "date-time",
            "description": "When this question was answered"
          },
          "confidence": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "User's confidence level in their answer (1-5)"
          },
          "notes": {
            "type": "string",
            "maxLength": 1000,
            "description": "Additional notes or context"
          }
        },
        "required": ["question_id", "response", "answered_at"]
      }
    },
    "ai_conversations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { 
            "type": "string",
            "description": "Unique identifier for this conversation"
          },
          "phase": { 
            "type": "string", 
            "pattern": "^(clarify|organize|refine|equip)$",
            "description": "Which phase this conversation belongs to"
          },
          "question_id": { 
            "type": "string", 
            "pattern": "^[A-Z]-\\d{2}$",
            "description": "Associated question ID, if applicable"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "role": { 
                  "type": "string", 
                  "enum": ["user", "assistant", "system"]
                },
                "content": { "type": "string" },
                "timestamp": { 
                  "type": "string", 
                  "format": "date-time"
                },
                "model": {
                  "type": "string",
                  "description": "AI model used for assistant messages"
                }
              },
              "required": ["role", "content", "timestamp"]
            }
          },
          "created_at": { 
            "type": "string", 
            "format": "date-time"
          },
          "updated_at": { 
            "type": "string", 
            "format": "date-time"
          }
        },
        "required": ["id", "phase", "messages", "created_at", "updated_at"]
      }
    },
    "exports": {
      "type": "object",
      "properties": {
        "last_export": {
          "type": "object",
          "properties": {
            "format": { 
              "type": "string", 
              "enum": ["markdown", "json", "ai_prompt"]
            },
            "timestamp": { 
              "type": "string", 
              "format": "date-time"
            },
            "file_size": { "type": "integer" },
            "checksum": { "type": "string" }
          }
        },
        "export_history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "format": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" },
              "version": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "required": ["session", "answers"]
}
